    } else {
      if (fee) {
        $.ajax({
          url: '/tla/task',
          type: 'post',
          headers: {
            authorization: "Bearer " + localStorage.getItem("accessToken"),
          },
          data: {
            jobId,
            customer_level,
            is_root,
            level,
            assigned_date,
            deadline,
            input_link,
            remark,
            qa,
            editor,
            start: $('#rbtStart').is(':checked'),
            cc
          },
          success: function (data) {
            $.toast({
              heading: 'Successfully!',
              text: data.msg,
              showHideTransition: 'fade',
              icon: 'success'
            });
            LoadTasks();
            $('#txtInputLink').val('');
            $('#txtRemark').val('');
            $('#divAddOrUpdateTask').slideUp(500);
          },
          error: function (err) {
            $.toast({
              heading: 'Error',
              text: err.responseJSON.msg,
              showHideTransition: 'fade',
              icon: 'error'
            });
          },
        })
      } else {
        $.ajax({
          url: '/tla/task/cc',
          type: 'put',
          headers: {
            authorization: "Bearer " + localStorage.getItem("accessToken"),
          },
          data: {
            taskId: $('#slLocalLevels option:selected').data('task'),
            level,
            assigned_date,
            deadline,
            input_link,
            remark,
            qa,
            editor,
            start: $('#rbtStart').is(':checked'),
            cc
          },
          success: function (data) {
            $.toast({
              heading: 'Successfully!',
              text: data.msg,
              showHideTransition: 'fade',
              icon: 'success'
            });
            LoadTasks();
            LoadJob();
            $('#txtInputLink').val('');
            $('#txtRemark').val('');
            $('#divAddOrUpdateTask').slideUp(500);
            cc = '';

          },
