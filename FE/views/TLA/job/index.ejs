    $(document).on("click", "button[name='process-job']", function () {
        jobId = $(this).closest('tr').attr('id');
        customerId = $(this).closest('tr').data('customer');
        isShown = false;
        $('.btn-job-info').html('Show job info<i class="fa fa-arrow-down" aria-hidden="true"></i>');
