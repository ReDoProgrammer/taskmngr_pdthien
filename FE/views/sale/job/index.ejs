  $(document).on("click", "button[name='btn-job-functions']", function (e) {
    var $contextMenu = $("#contextMenu");
    $contextMenu.css({
      display: "block",
      left: e.pageX,
      top: e.pageY
    });

    jobId = $(this).closest('tr').attr('id');

    $.ajax({
      url: '/sale/job/detail',
      type: 'get',
      headers: {
        authorization: "Bearer " + localStorage.getItem("accessToken"),
      },
      data: {
        jobId
      },
      success: function (data) {


        $('#funcMenu').empty();
