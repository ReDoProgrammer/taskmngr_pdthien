              }
              newRow += '</td>';

              newRow += '<td>';
              if (t.editor.length > 0) {
                newRow += t.editor[t.editor.length - 1].staff.username;
              }
              newRow += '</td>';

              newRow += '<td>';
              if (t.editor.length > 0 && t.editor[t.editor.length - 1].submited.length > 0) {
