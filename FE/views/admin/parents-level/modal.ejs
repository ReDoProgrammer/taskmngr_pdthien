<div class="modal" tabindex="-1" id="modalParentsLevel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add or update parents level</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="">Parents level name:</label>
                        <input type="text" name="txtName" id="txtName" class="form-control" placeholder="Parents level name">
                    </div>                    
                </div>               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSubmit">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script>

    $('#btnSubmit').click(function () {
        let name = $('#txtName').val().trim();       

        if (plId.length > 0) {
            $.ajax({
                url: '/admin/parents-level',
                type: 'put',
                headers: {
                    authorization: "Bearer " + localStorage.getItem('accessToken'),
                },
                data: {
                    id:plId,
                    name                                   
                },
                success: function (data, textStatus, xhr) {
                    alert(data.msg);
                    $('#modalParentsLevel').modal('hide');
                    plId = '';
                }, error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseJSON.msg);
                }
            })
        } else {
            $.ajax({
                url: '/admin/parents-level',
                type: 'post',
                headers: {
                    authorization: "Bearer " + localStorage.getItem('accessToken'),
                },
                data: {
                    name                              
                },
                success: function (data, textStatus, xhr) {
                    alert(data.msg);
                    $('#modalParentsLevel').modal('hide');
                    plId = '';
                }, error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseJSON.msg);
                }
            })
        }

    })
</script>