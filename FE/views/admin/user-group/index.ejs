<button type="button" class="btn btn-primary" id="btnAddNew">
  <span>
    <i class="fa fa-plus" aria-hidden="true"></i>
  </span>
  Add New
</button>
<table class="table mt-2">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody id="tblData"></tbody>
</table>

<script>
  var ugId = "";

  function LoadData() {
    $("#tblData").empty();
    $.ajax({
      url: "/admin/user-group/list",
      type: "get",
      data: {},
      success: function (data, textStatus, xhr) {
        let idx = 1;
        data.uts.forEach((ut) => {
          let tr = "<tr id=" + ut._id + " data-name = " + ut.name + ">";
          tr += '<th scope="row">' + idx++ + "</th>";
          tr += "<td class='font-weight-bold text-info'>" + ut.name + "</td>";
          tr += "<td>" + ut.description + "</td>";
          tr +=
            '<td class="text-right"><button class="btn btn-sm btn-info" name="detail"><i class="fa fa-eye" aria-hidden="true"></i></button>';
          tr += '<button class="btn btn-sm btn-warning ml-1" name="update"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>';
          tr +=
            '<button class="btn btn-sm btn-danger ml-1" name="delete"><i class="fa fa-trash" aria-hidden="true"></i></button>';

            tr +=
            '<button class="btn btn-sm btn-primary ml-2" name="wage"><i class="fa fa-bars" aria-hidden="true"></i></button></td>';
          tr += "</tr>";
          $("#tblData").append(tr);
        });
      },
      error: function (jqXHR, textStatus, errorThrown) {
        alert(jqXHR.responseJSON.msg);
      },
    });
  }

  $(document).ready(function () {
    $("#btnAddNew").click(function () {
      ugId = "";
      $("#modalUserType").modal();
    });
    LoadData();
  });

  //sự kiện modal shown --> set các giá trị mặc định cho component trên form
  $(document).on("show.bs.modal", ".modal", function () {
    $("#txtName").val("");
    $("#txtDescription").val("");
  });

  //sự kiện load lại hàm ds level khi modal đc đóng lại
  $(document).on("hidden.bs.modal", "#modalUserType", function () {
    LoadData();
    ugId = "";
  });

  $("#tblData").on("click", "button[name='delete']", function () {
    var r = confirm(
      "Vui lòng xác nhận xóa user type " +
      $(this).closest("tr").data("name") +
      "?"
    );
    if (r == true) {
      let ugId = $(this).closest("tr").attr("id");
      $.ajax({
        url: "/admin/user-group",
        type: "delete",
        headers: {
          authorization: "Bearer " + localStorage.getItem("accessToken"),
        },
        data: {
          id: ugId
        },
        success: function (data, textStatus, xhr) {
          //xóa các thông tin tiền công liên quan tới nhóm nhân viên vừa xóa
          $.ajax({
            url: '/admin/user-group-wage',
            type: 'delete',
            headers: {
              authorization: "Bearer " + localStorage.getItem("accessToken"),
            },
            data: {
              ugId
            }
            , success: function (data) {
              alert(data.msg);
              LoadData();
            },
            error: function (jqXHR, textStatus, errorThrown) {
              alert(jqXHR.responseJSON.msg);
            },
          })
        },
        error: function (jqXHR, textStatus, errorThrown) {
          alert(jqXHR.responseJSON.msg);
        },
      });
    }
  });


  $("#tblData").on("click", "button[name='detail']", function () {
    ugId = $(this).closest("tr").attr("id");
    $("#modalUserGroupDetail").modal();
  })

  $("#tblData").on("click", "button[name='update']", function () {
    ugId = $(this).closest("tr").attr("id");

    $.ajax({
      url: "/admin/user-group/detail",
      type: "get",
      headers: {
        authorization: "Bearer " + localStorage.getItem("accessToken"),
      },
      data: {
        id: ugId,
      },
      success: function (data, textStatus, xhr) {
        $("#modalUserType").modal();
        $("#txtName").val(data.ut.name);
        $("#txtDescription").val(data.ut.description);

        let idx = 1;
        data.ut.wages.forEach((w) => {
          let tr =
            '<tr id="' +
            w._id +
            '" class="row" data-level="' +
            w.level._id +
            '" data-skill="' +
            w.skill._id +
            '">';
          tr += '<td class="col-md-1">' + idx++ + "</td>";
          tr += '<td class="col-md-4">' + w.skill.name + "</td>";
          tr += '<td class="col-md-3">' + w.level.name + "</td>";
          tr += '<td class="col-md-2">' + w.wage + "</td>";
          tr +=
            '<td class="col-md-2"><button class="btn btn-sm btn-warning" name="update"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>';
          tr +=
            '<button class="btn btn-sm btn-danger ml-2" name="delete"><i class="fa fa-trash" aria-hidden="true"></i></button></td>';
          tr += "</tr>";
          $("#tblWages").append(tr);
        });
      },
      error: function (jqXHR, textStatus, errorThrown) {
        alert(jqXHR.responseJSON.msg);
      },
    });
  });
</script>

<%-include('modal')%>
  <%-include('detail')%>