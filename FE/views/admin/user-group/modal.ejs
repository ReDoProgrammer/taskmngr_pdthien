<div class="modal" tabindex="-1" id="modalUserType">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add or update user type</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="">Name</label>
            <input
              type="text"
              name="txtName"
              id="txtName"
              class="form-control"
              placeholder="User type name"
            />
          </div>
          <div class="form-group col-md-8">
            <label for="">Description</label>
            <input
              type="text"
              name="txtDescription"
              id="txtDescription"
              class="form-control"
              placeholder="Description"
            />
          </div>
        </div>
        <div class="card text-white bg-secondary mb-3">
          <div class="card-header">Skill & wage</div>
          <div class="card-body">
            <table class="table">
              <thead>
                <tr class="row">
                  <th scope="col" class="col-md-1">#</th>
                  <th scope="col" class="col-md-4">Skill</th>
                  <th scope="col" class="col-md-3">Level</th>
                  <th scope="col" class="col-md-2">Wage</th>
                  <th scope="col" class="col-md-2"></th>
                </tr>
              </thead>
              <tbody id="tblWages"></tbody>
            </table>
            <div class="form-inline form-row">
              <select
                name=""
                id="slSkill"
                class="form-control col-md-3"
              ></select>
              <select
                name=""
                id="slLevel"
                class="form-control col-md-3 ml-1"
              ></select>

              <input
                type="text"
                id="txtWage"
                class="form-control col-md-2 ml-1 mr-1 text-right"
                value="0"
              />

              <button
                type="submit"
                class="btn btn-info col-md-2"
                id="btnAddNewLine"
              >
                Add New wage
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary" id="btnSubmit">
          Submit All
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  var idx = 1;
  var wageId = "";
  $(document).ready(function () {
    LoadSkill();
    LoadLevel();
  });

  $(document).on("show.bs.modal", ".modal", function () {
    $("#tblWages").empty();
  });

  $("#btnSubmit").click(function () {
    let name = $("#txtName").val().trim();
    let description = $("#txtDescription").val().trim();

    let wages = [];

    $("#tblWages  > tr").each(function (index, tr) {
      let level = $(this).closest("tr").data("level");
      let skill = $(this).closest("tr").data("skill");
      let td = $(this).find("td").eq(3);
      let wage = { skill: skill, level: level, wage: parseInt(td.text()) };
      wages.push(wage);
    });

    if (utId.length > 0) {//case update user type
      $.ajax({
        url: "/admin/user-group",
        type: "put",
        headers: {
          authorization: "Bearer " + localStorage.getItem("accessToken"),
        },
        data: {
          id: utId,
          name,
          description,
          wages
        },
        success: function (data, textStatus, xhr) {
          alert(data.msg);
          $("#modalUserType").modal("hide");
          ugId = "";
        },
        error: function (jqXHR, textStatus, errorThrown) {
          alert(jqXHR.responseJSON.msg);
        },
      });
    } else {//case create a new customer type
      $.ajax({
        url: "/admin/user-group",
        type: "post",
        headers: {
          authorization: "Bearer " + localStorage.getItem("accessToken"),
        },
        data: {
          name,
          description,
          wages,
        },
        success: function (data, textStatus, xhr) {
          alert(data.msg);
          $("#modalUserType").modal("hide");
          ugId = "";
        },
        error: function (jqXHR, textStatus, errorThrown) {
          alert(jqXHR.responseJSON.msg);
        },
      });
    }
  });

  function LoadSkill() {
    $.ajax({
      url: "/admin/skill",
      type: "get",
      success: function (data, textStatus, xhr) {
        $("#slSkill").empty();
        data.skills.forEach((skill) => {
          opt = '<option value="' + skill._id + '">' + skill.name + "</option>";
          $("#slSkill").append(opt);
        });
      },
      error: function (jqXHR, textStatus, errorThrown) {
        alert(jqXHR.responseJSON.msg);
      },
    });
  }

  function LoadLevel() {
    $.ajax({
      url: "/admin/staff-level",
      type: "get",
      success: function (data, textStatus, xhr) {
        $("#slLevel").empty();
        data.levels.forEach((level) => {
          opt = '<option value="' + level._id + '">' + level.name + "</option>";
          $("#slLevel").append(opt);
        });
      },
      error: function (jqXHR, textStatus, errorThrown) {
        alert(jqXHR.responseJSON.msg);
      },
    });
  }

  //ràng buộc nhập dữ liệu, chỉ cho nhập kiểu số thực
