<button type="button" class="btn btn-primary" id="btnAddNew">
    <span>
        <i class="fa fa-plus" aria-hidden="true"></i>
    </span>
    Add New
</button>
<table class="table table-striped mt-2">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Root</th>
            <th scope="col">Parents</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="tblData"></tbody>
</table>




<script>
    var rootId = '';
    $(document).ready(function () {
        LoadRootsList();
    })
    $(document).on("click", "button[name='mapping']", function () {
        rootId = $(this).closest("tr").attr("id");
        $('#modalMapping').modal();
    })

    $(document).on("click", "button[name='delete']", function () {
        rootId = $(this).closest("tr").attr("id");
        Swal.fire({
            icon: 'question',
            title: 'Do you want to delete this root level?',
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: 'Yes',
            denyButtonText: `No`,
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/admin/root-level',
                    type: 'delete',
                    headers: {
                        authorization: "Bearer " + localStorage.getItem('accessToken'),
                    },
                    data: {
                        rootId
                    },
                    success: function (data) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Congratulation',
                            text: data.msg
                        });
                        LoadRootsList();
                    }
                    , error: function (jqXHR, textStatus, errorThrown) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Opp..',
                            text: jqXHR.responseJSON.msg
                        });
                    }
                })
            }
        })
    })

    $(document).on("click", "button[name='update']", function () {
        rootId = $(this).closest("tr").attr("id");
        $.ajax({
            url: '/admin/root-level/detail',
            type: 'get',
            headers: {
                authorization: "Bearer " + localStorage.getItem('accessToken'),
            },
            data: {
                rootId
            },
            success: function (data) {
                $('#txtName').val(data.root.name);
                $('#txaDescription').val(data.root.description);
                $('#modalRootLevel').modal();
            }
        })
    })

    $('#btnAddNew').click(function () {
        rootId = '';
        $('#txtName').val('');
        $('#txaDescription').val('');
        $('#modalRootLevel').modal();
    })

    function LoadRootsList() {
        $.ajax({
            url: '/admin/root-level',
            type: 'get',
            headers: {
                authorization: "Bearer " + localStorage.getItem('accessToken'),
            },
            success: function (data) {
                $('#tblData').empty();
                let idx = 1;
                data.roots.forEach(root => {
                    let tr = '<tr id = "' + root._id + '">';
                    tr += '<td>' + (idx++) + '</td>';
                    tr += '<td class="font-weight-bold text-primary">' + root.name + '</td>';
                    tr += '<td>';
                    if (root.parents.length > 0) {
                        tr += (root.parents.map(x => x.name)).toString();
                    }
                    tr += '</td>';
                    tr += '<td>' + root.description + '</td>'
                    tr += '<td class="text-right">';
                    tr += '<button class="btn btn-xs btn-primary" name="mapping"><i class="fa fa-bars" aria-hidden="true"></i></button>';
                    tr += '<button class="btn btn-xs btn-warning ml-2" name="update"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>';
                    tr += '<button class="btn btn-xs btn-danger ml-2" name="delete"><i class="fa fa-trash" aria-hidden="true"></i></button>';
                    tr += '</td>';
                    tr += '</tr>';
                    $('#tblData').append(tr);
                })
            }
        })
    }
</script>

<%-include('modal')%>
    <%-include('mapping')%>