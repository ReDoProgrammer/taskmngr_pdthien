<div id="modalRootLevel" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add or update root level</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="">Name:</label>
                    <input type="text" placeholder="Root level name" id="txtName" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Description:</label>
                    <textarea placeholder="Root level description" id="txaDescription" rows="3"
                        class="form-control"></textarea>
                </div>

                <label id="errMsg" class="font-weight-bold"></label>

            </div>
            <div class="modal-footer">
                <button class="btn btn-success" id="btnSubmit">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    Submit
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    $('#btnSubmit').click(function () {
        let name = $('#txtName').val();
        let description = $('#txaDescription').val();

        if (name.length == 0) {
            $('#errMsg').removeClass('text-success').addClass('text-danger');
            $('#errMsg').text('(!) Please input material name').fadeIn().delay(3000).fadeOut();
            return;
        }



        if (rootId.length == 0) {
            $.ajax({
                url: '/admin/root-level',
                type: 'post',
                headers: {
                    authorization: "Bearer " + localStorage.getItem('accessToken'),
                },
                data: {
                    name,
                    description
                },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Congratulation',
                        text: data.msg
                    });
                    $('#modalRootLevel').modal('hide');
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    $('#errMsg').removeClass('text-success').addClass('text-danger');
                    $('#errMsg').text(jqXHR.responseJSON.msg).fadeIn().delay(3000).fadeOut();
                }
            })
        } else {
            $.ajax({
                url: '/admin/root-level',
                type: 'put',
                headers: {
                    authorization: "Bearer " + localStorage.getItem('accessToken'),
                },
                data: {
                    rootId,
                    name,
                    description
                },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Congratulation',
                        text: data.msg
                    });
                    $('#modalRootLevel').modal('hide');
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    $('#errMsg').removeClass('text-success').addClass('text-danger');
                    $('#errMsg').text(jqXHR.responseJSON.msg).fadeIn().delay(3000).fadeOut();
                }
            })
        }
    })


    $('#modalRootLevel').on('hidden.bs.modal', function () {
        LoadRootsList();
    })
   

</script>