<button type="button" class="btn btn-primary" id="btnAddNew">
    <span>
      <i class="fa fa-plus" aria-hidden="true"></i>
    </span>
    Add New
  </button>
  <table class="table mt-2 table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Level</th>
        <th scope="col">Description</th>
        <th scope="col">Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody id="tblData">
      <a href="http://" target="_blank" rel="noopener noreferrer">
      </a>
  
  
    </tbody>
  </table>
  
  
  
  
  <script>
  
    var bankId = '';
  
    function LoadData() {
      $('#tblData').empty();
      $.ajax({
        url: '/admin/bank/list',
        type: 'get',
        data: {
        },
        success: function (data, textStatus, xhr) {
          let idx = 1;
          data.banks.forEach(bank => {
            let tr = '<tr id=' + bank._id + ' data-name = '+bank.name+'>';
            tr += '<th scope="row">' + (idx++) + '</th>';
            tr += '<td>' + bank.name + '</td>';
            tr += '<td>' + bank.description + '</td>';           
  
            tr += '<td class="text-right"><button class="btn btn-sm btn-warning" name="update"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>';
            tr += '<button class="btn btn-sm btn-danger ml-1" name="delete"><i class="fa fa-trash" aria-hidden="true"></i></button></td>';
            tr += '</tr>';
            $('#tblData').append(tr);
          });
        },
        error: function (jqXHR, textStatus, errorThrown) {
          alert(jqXHR.responseJSON.msg);
        }
      })
    }
  
    $(document).ready(function () {
      $('#btnAddNew').click(function () {
        bankId = '';
        $('#modalBank').modal();
      });
      LoadData();
    });
  
    //sự kiện modal shown --> set các giá trị mặc định cho component trên form
    $(document).on('show.bs.modal', '.modal', function () {
      $('#txtName').val('');
      $('#txtDescription').val('');    
    });
  
    //sự kiện load lại hàm ds level khi modal đc đóng lại
    $(document).on('hidden.bs.modal', '#modalBank', function () {
      LoadData();
    });
  
  
    $(document).on("click", "button[name='delete']", function () {
  
      var r = confirm("Vui lòng xác nhận xóa ngân hàng " + $(this).closest("tr").data('name') + "?");
      if (r == true) {
        $.ajax({
          url: '/admin/bank',
          type: 'delete',
          headers: {
            authorization: "Bearer " + localStorage.getItem('accessToken'),
          },
          data: {
            id: $(this).closest("tr").attr("id")
          },
          success: function (data, textStatus, xhr) {
            alert(data.msg);
            LoadData();
          }, error: function (jqXHR, textStatus, errorThrown) {
            alert(jqXHR.responseJSON.msg);
          }
        })
      }
  
  
    });
  
    $(document).on("click", "button[name='update']", function () {
  
        bankId = $(this).closest("tr").attr("id");
  
      $.ajax({
        url: "/admin/bank/detail",
        type: "get",
        headers: {
          authorization: "Bearer " + localStorage.getItem('accessToken'),
        },
        data: {
          id: bankId
        },
        success: function (data, textStatus, xhr) {         
          $('#modalBank').modal();
          $('#txtName').val(data.bank.name);
          $('#txtDescription').val(data.bank.description);         
        }, error: function (jqXHR, textStatus, errorThrown) {
          alert(jqXHR.responseJSON.msg);
        }
      });
  
    });
  </script>
  
  <%-include('modal')%>