<%-include('modal')%>

  <script>
    var userId = '';
    var search = '';
    var page = 1;
    $(document).ready(() => {
      $("#direction").val("Quản lý khách hàng");
      LoadUsers();
    });

    $('#btnAddStaff').click(function () {
      $('#modalStaff').modal();
    })


    function LoadUsers() {
      $.ajax({
        url: '/admin/user',
        type: 'get',
        headers: {
          authorization: "Bearer " + localStorage.getItem('accessToken'),
        },
        data: {
          search,
          page
        },
        success: function (data, textStatus, xhr) {
          console.log(data.users);
          $('#tblUsers').empty();
          data.users.forEach(user=>{
            let tr = '<tr>';
              tr+= '<td>'+user.fullname+'</td>';
              tr+= '<td>'+user.phone+'</td>';
              tr+= '<td>'+user.email+'</td>';
              tr+= '<td>'+user.address+'</td>';
              tr+= '<td>'+user.idno+'</td>';
              tr+= '<td>role</td>';
              tr+= '</tr>';
              $('#tblUsers').append(tr);
          })
        }, error: function (jqXHR, textStatus, errorThrown) {
          alert(jqXHR.responseJSON.msg);
        }
      })
    }

  </script>