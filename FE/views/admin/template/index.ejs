<button type="button" class="btn btn-primary" id="btnAddNew">
  <span>
    <i class="fa fa-plus" aria-hidden="true"></i>
  </span>
  Add New
</button>
<table class="table mt-2 table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody id="tblData">
  </tbody>
</table>

<%-include('modal')%>

  <script>
    var tempId = '';
    $(document).ready(function () {
      LoadTemplates();
    })

    $('#btnAddNew').click(function () {
      tempId = '';
      $('#txtName').val('');
      $('#txaDescription').val('');
      $('#modalTemplate').modal();
    })

    function LoadTemplates() {
      $.ajax({
        url: '/admin/template/list',
        type: 'get',
        headers: {
          authorization: "Bearer " + localStorage.getItem('accessToken'),
        },
        success: function (data) {
          let idx = 1;
          $('#tblData').empty();
          data.templates.forEach(temp => {
            let tr = '<tr id="' + temp._id + '">';
            tr += '<td>' + (idx) + '</td>';
            tr += '<td class="font-weight-bold">' + temp.name + '</td>';
            tr += '<td>' + temp.description + '</td>';
            tr += '<td class="text-right">';
            tr += '<button class="btn btn-xs btn-warning" name="update"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>';
            tr += '<button class="btn btn-xs btn-danger ml-1" name="delete"><i class="fa fa-trash" aria-hidden="true"></i></button>';
            tr += '</td>';
            tr += '</tr>';
            $('#tblData').append(tr);
          })
        }
      })
    }


    $('#modalTemplate').on('hidden.bs.modal', function () {
      LoadTemplates();
    })

    $(document).on("click", "button[name='update']", function () {
      tempId = $(this).closest("tr").attr("id");
      $.ajax({
        url: '/admin/template/detail',
        type: 'get',
        headers: {
          authorization: "Bearer " + localStorage.getItem('accessToken'),
        },
        data: { tempId },
        success: function (data) {
          $('#txtName').val(data.temp.name);
          $('#txaDescription').val(data.temp.description);
          $('#modalTemplate').modal();
        },
        error: function (jqXHR, textStatus, errorThrown) {
          Swal.fire(
            'Error!!',
            jqXHR.responseJSON.msg,
            'error'
          );
        }
      })
    })

    $(document).on("click", "button[name='delete']", function () {
      Swal.fire({
        title: 'Are you sure want to delete this template?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: '/admin/template',
            type: 'delete',
            headers: {
              authorization: "Bearer " + localStorage.getItem('accessToken'),
            },
            data: {
              tempId: $(this).closest("tr").attr("id")
            },
            success: function (data, textStatus, xhr) {
              Swal.fire(
                'Deleted!',
                data.msg,
                'success'
              )
              LoadTemplates();
            }, error: function (jqXHR, textStatus, errorThrown) {
              alert(jqXHR.responseJSON.msg);
            }
          })

        }
      })
    });
  </script>